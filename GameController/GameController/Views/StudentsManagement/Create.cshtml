@model GameControllerData.Models.Student
@using System.Text.RegularExpressions
@{
    ViewData["Title"] = "Create";
    var resultString = Regex.Match(Context.Request.Path, @"\d+").Value;
}

<style>
    body {
        text-align: center;
    }

    .row {
        display: inline-block;
        width: 40%;
    }
</style>
<h2>Create </h2>

<h4>Student</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <input asp-for="StudentID" class="form-control" />
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamID" class="control-label"></label>
                <select asp-for="TeamID" class="form-control" asp-items="@(new SelectList(resultString))">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div class="button-div">
    <a class="button-text" asp-action="Index" asp-route-id=@resultString>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
